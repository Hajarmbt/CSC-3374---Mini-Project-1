<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.client.ClientController">

    <!-- Top Status Bar -->
    <HBox style="-fx-background-color: #2b2b2b; -fx-padding: 8; -fx-spacing: 10;" alignment="CENTER_LEFT">
        <Circle fx:id="statusCircle" radius="6" fill="gray" />
        <Label fx:id="statusLabel" text="Connecting..." textFill="white" style="-fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="connectionInfoLabel" text="localhost:3333" textFill="#aaaaaa" style="-fx-font-size: 11;" />
    </HBox>

    <!-- Messages Area -->
    <ScrollPane fx:id="sp_main" VBox.vgrow="ALWAYS" fitToWidth="true" style="-fx-background: #f5f5f5;">
        <VBox fx:id="vbox_messages" spacing="5" style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
        </VBox>
    </ScrollPane>

    <!-- Input Area -->
    <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: white; -fx-border-color: #dddddd; -fx-border-width: 1 0 0 0;">
        <TextField fx:id="tf_message" promptText="Type your message..." HBox.hgrow="ALWAYS" />
        <Button fx:id="button_send" text="Send" prefWidth="80" style="-fx-background-color: #0c7df2; -fx-text-fill: white; -fx-font-weight: bold;" />
    </HBox>
</VBox>